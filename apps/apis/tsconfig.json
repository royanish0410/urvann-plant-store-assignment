{
    "extends": "../../packages/typescript-config/base.json",
    "compilerOptions": {
      "outDir": "dist",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "target": "ES2022"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }